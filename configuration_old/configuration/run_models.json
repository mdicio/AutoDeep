{
    "include_models": ["XGB", "MLP"],
    "include_datasets": ["creditcard", "iris"],
    "execution_mode_models": {"XGB": "hyperopt", "MLP":"cv"},

    "runs": [
      {
        "dataset": "creditcard",
        "metrics": ["mse", "auc"],
        "model": "XGB",
        "n_iter": 10,
        "cv": 5,
        "best_params": {
          "max_depth": 3,
          "learning_rate": 0.1},
        "param_grid": {
          "max_depth": [3,5,7],
          "learning_rate": [0.1],
          "subsample": [0.8,1],
          "colsample_bytree": [0.1, 1],
          "min_child_weight": [1,4],
          "gamma": [0,1]
        }
      },
      {
        "dataset": "iris",
        "metrics": ["precision", "recall", "f1"],
        "model": "MLP",
        "best_params": {
          "hidden_size": 32,
          "learning_rate": 0.01
        },
        "param_grid": {
          "hidden_layer_sizes": [50, 100, 150, 200, 250, 300],
          "activation": ["relu", "tanh", "logistic"],
          "solver": ["adam", "sgd"],
          "alpha": [0.0001, 0.001, 0.01],
          "learning_rate_init": [0.001, 0.01, 0.1],
          "max_iter": [100, 200, 300]
      }
      
      }
    ]
  }
